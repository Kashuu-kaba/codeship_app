<div class="container pt-5">
    <h2 class="product-list-style">商品一覧</h2>
    <div class="row">
        <% @products.each do |product|%>
            <div class="card col-sm-3">
                <div class="card-body">
                    <div class="text-center my-3">
                        <%= image_tag product.image.to_s, height: '150', width: '150'%>
                    </div>
                    <h5 class="card-title"><%= product.name %></h5>
                    <p class="card-text"><%= product.price%>円</p>
                    <%=link_to '詳細へ', product_path(product), class: "product-detail-btn"%>
                </div>
            </div>
        <% end %>
    </div>
</div>