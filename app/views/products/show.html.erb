<div class="container">
    <div class="detail-card">
        <div class="img">
            <%= image_tag @product.image.to_s %>
        </div>
        <div class="inner-text">
            <div class="text">
                <h3><%= @product.name %></h3>
                <p><%= @product.description %></p>
                <p class="value"><%= @product.price %></p>
            </div>
            <div class="btn">
                <button>
                    <%= link_to "買い物かごに入れる", product_cart_products_path(@product), method: :post %>
                </button>
                 <% if current_user.admin %>
                    <button>
                        <%= link_to edit_product_path do %>
                            <span>編集</span>
                        <% end %>
                    </button>
                    <button>
                        <%= link_to "この商品を削除する" ,product_path(@product), method: :delete, data: {confirm: "#{@product.name}を本当に削除しますか?" } %>
                    </button>
                 <% end %>
            </div>
        </div>
    </div>
</div>